source 'https://rubygems.org'

# A make-like build utility for Ruby
# https://github.com/jimweirich/rake
gem 'rake'

# RSpec meta-gem that depends on the other components
# https://github.com/rspec/rspec
gem 'rspec'

# The instafailing RSpec progress bar formatter
# https://github.com/jeffkreeftmeijer/fuubar
gem 'fuubar'

# Acceptance test framework for web applications
# https://github.com/jnicklas/capybara
gem 'capybara'

# A Capybara driver for headless WebKit so you can test Javascript web apps
# https://github.com/thoughtbot/capybara-webkit
gem 'capybara-webkit'

# A helper for launching cross-platform applications in a fire and forget manner
# https://github.com/copiousfreetime/launchy
gem 'launchy'